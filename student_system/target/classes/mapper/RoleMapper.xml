<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lb.mapper.RoleMapper">
	<resultMap id="role" type="com.lb.entity.Role">
		<id column="id" property="id"></id>
		<result column="role_name" property="roleName"></result>
		<result column="description" property="description"></result>
	</resultMap>

	<select id="queryRoleByName" parameterType="java.lang.String" resultMap="role">
         select id, role_name, description from role where role_name=#{roleName}
	</select>
	<select id="queryRoleById" parameterType="java.lang.Integer" resultMap="role">
		select  * from role where id=#{id}
	</select>
	<insert id="insertUserRole" parameterType="com.lb.entity.Role">
		insert into t_user_role(user_id,role_id) values (#{userId},#{roleId})
	</insert>
</mapper>
